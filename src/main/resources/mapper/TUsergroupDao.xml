<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.busi.mapper.TUsergroupDao">

    <resultMap id="BaseResultMap" type="cn.com.busi.entity.TUsergroup">
        <!--@Table t_usergroup-->
        <result property="username" column="USERNAME" jdbcType="VARCHAR"/>
        <result property="groupid" column="GROUPID" jdbcType="VARCHAR"/>
        <result property="sysid" column="SYSID" jdbcType="VARCHAR"/>
        <result property="admin" column="ADMIN" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          USERNAME, GROUPID, SYSID, ADMIN
        from wolf-cloud.t_usergroup
        where USERNAME = #{username}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          USERNAME, GROUPID, SYSID, ADMIN
        from wolf-cloud.t_usergroup
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          USERNAME, GROUPID, SYSID, ADMIN
        from wolf-cloud.t_usergroup
        <where>
            <if test="username != null and username != ''">
                and USERNAME = #{username}
            </if>
            <if test="groupid != null and groupid != ''">
                and GROUPID = #{groupid}
            </if>
            <if test="sysid != null and sysid != ''">
                and SYSID = #{sysid}
            </if>
            <if test="admin != null">
                and ADMIN = #{admin}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="username" useGeneratedKeys="true">
        insert into wolf-cloud.t_usergroup(ADMIN)
        values (#{admin})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wolf-cloud.t_usergroup
        <set>
            <if test="admin != null">
                ADMIN = #{admin},
            </if>
        </set>
        where USERNAME = #{username}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wolf-cloud.t_usergroup where USERNAME = #{username}
    </delete>

</mapper>